{
  "name": "lykos-wallet-backend",
  "version": "1.0.0",
  "description": "Next-generation Web3 wallet backend with ERC-4337 account abstraction",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:infra": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:full": "docker-compose -f docker-compose.dev.yml up -d && concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@noble/secp256k1": "^1.7.2",
    "@prisma/client": "^5.19.1",
    "@simplewebauthn/server": "^10.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.7.7",
    "bcrypt": "^6.0.0",
    "cbor-x": "^1.6.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "resend": "^6.8.0",
    "tailwindcss": "^4.1.18",
    "viem": "^2.21.45",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
